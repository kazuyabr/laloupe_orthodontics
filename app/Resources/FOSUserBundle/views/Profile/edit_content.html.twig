{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}{% endblock %}

{% block body %}
    <div id="msform">
        {{ form_start(form) }}
        <fieldset class="largebloc">
            <div id="container">
                <div class="profileplace">
                    {{ form_label(form.username) }} <!-- Affiche le label -->
                    {{ form_errors(form.username) }}
                    {{ form_widget(form.username) }}

                    {{ form_label(form.email) }}
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email) }}

                    {{ form_label(form.current_password) }}
                    {{ form_errors(form.current_password) }}
                    {{ form_widget(form.current_password) }}
                </div>
                <div class="profileplace">
                    <p>
                        <strong>Adresse de livraison</strong>
                    </p>
                    {{ form_label(form.adresse) }} <!-- Affiche le label -->
                    {{ form_errors(form.adresse) }} <!-- Affiche erreur si champ vide -->
                    {{ form_widget(form.adresse) }}

                    {{ form_label(form.codePostal) }}
                    {{ form_errors(form.codePostal) }}
                    {{ form_widget(form.codePostal) }}

                    {{ form_label(form.ville) }}
                    {{ form_errors(form.ville) }}
                    {{ form_widget(form.ville) }}

                    {{ form_label(form.telephone) }}
                    {{ form_errors(form.telephone) }}
                    {{ form_widget(form.telephone) }}
                </div>
                <div class="profileplace">
                    <p><strong>Adresse de facturation</strong></p>
                    {{ form_label(form.adresseFacturation) }} <!-- Affiche le label -->
                    {{ form_errors(form.adresseFacturation) }} <!-- Affiche erreur si champ vide -->
                    {{ form_widget(form.adresseFacturation) }}
                    <br />
                    {{ form_label(form.codePostalFacturation) }}
                    {{ form_errors(form.codePostalFacturation) }}
                    {{ form_widget(form.codePostalFacturation) }}
                    <br />
                    {{ form_label(form.villeFacturation) }}
                    {{ form_errors(form.villeFacturation) }}
                    {{ form_widget(form.villeFacturation) }}
                    <br />
                    {{ form_label(form.telephoneFacturation) }}
                    {{ form_errors(form.telephoneFacturation) }}
                    {{ form_widget(form.telephoneFacturation) }}
                </div>

                <div class="profileplace">
                    <p><strong>Envoi du r√©capitulatif</strong></p>

                    {{ form_label(form.mailBis) }}
                    {{ form_errors(form.mailBis) }}
                    {{ form_widget(form.mailBis) }}

                    {{ form_label(form.mailTer) }}
                    {{ form_errors(form.mailTer) }}
                    {{ form_widget(form.mailTer) }}
                </div>
            </div>

            <a href="{{ path('fos_user_profile_show') }}">
                <input style="width: inherit" type="button" name="previous"
                    class="previous action-button" value="Retour au profil"/>
            </a>
            <input class="action-button" type="submit" value="{{ 'profile.edit.submit'|trans }}"/>
        </fieldset>
        {{ form_end(form) }}
    </div>
{% endblock %}
