{% endblock %}


<div class="navbar_homepage">
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <ul class="nav navbar-nav">

                <li {% if app.request.get('_route') == 'fos_user_security_logout' %}
                    class="active"{% endif %}>
                    <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
                </li>
                <li {% if app.request.get('_route') == 'ortho_formulaire' %}
                    class="active"{% endif %}>
                    <a href="{{ path('ortho_formulaire') }}">Formulaire</a>
                </li>
                <li {% if app.request.get('_route') == 'fos_user_profile_show' %}
                    class="active"{% endif %}>
                    <a href="{{ path('fos_user_profile_show') }}">Profile</a>
                </li>
                <li><a href="http://www.labo-orthodontics.fr" target="_blank">Site du laboratoire</a>
                </li>
                <li><a href="#">Lien 3</a></li>
                <li><a href="#">Lien 4</a></li>
                <li><a href="#">Lien 5</a></li>
            </ul>
        </div>
    </nav>
</div>
{% block body %}
    <div id="msform">
        <fieldset>
            <div class="id_mdp_User">
                <span>ID : {{ user.id }}</span>
            </div>
            <div id="container">
            <div class="profileplace">
                <p><strong>Utilisateur</strong></p>
            <p>Identifiant <span class="affichageCadreProfil"> {{ user.username }}</span> </p>
            <p>Email 1 <span class="affichageCadreProfil">{{ user.email }}</span> </p>
            <p>Email 2 <span class="affichageCadreProfil">{{ user.email }}</span> </p>
            </div>
            <br/>
            <div class="profileplace">
            <p><strong>Adresse de livraison</strong></p>
            <p>Adresse <span class="affichageCadreProfil"> {{ user.adresseCab }}</span></p>
            <p>Code Postal <span class="affichageCadreProfil"> {{ user.codepostalCab }}</span></p>
            <p>ville <span class="affichageCadreProfil">{{ user.villeCab }}</span></p>
            <p>Téléphone <span class="affichageCadreProfil">{{ user.telephoneCab }}</span></p>
            </div>
            <br/>
            <div class="profileplace">
            <p><strong>Adresse de facturation</strong></p>
                <p>Adresse <span class="affichageCadreProfil"> {{ user.adresseCab }}</span></p>
                <p>Code Postal <span class="affichageCadreProfil"> {{ user.codepostalCab }}</span></p>
                <p>ville <span class="affichageCadreProfil">{{ user.villeCab }}</span></p>
            </div>
            <br/>
            <div class="profileplace">
            <h4>Envoi du récapitulatif</h4>
            <br/>
            <p>Mail 1 <span class="affichageCadreProfil">{{ user.email }}</span></p>
            <p>Mail 2</p>
            <p>Mail 3</p>
                </div>
            <br/>
            </div>

            <a href="{{ path('fos_user_profile_edit') }}"><input type="button" value="Modifier mes informations" /></a>

        </fieldset>


    </div>

{% endblock %}
<!-- Appel de jQuery -->
<script src="http://thecodeplayer.com/uploads/js/jquery-1.9.1.min.js" type="text/javascript"></script>
