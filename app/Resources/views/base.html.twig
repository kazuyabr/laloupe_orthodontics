<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Néo 3D | Orthodontics{% endblock %}</title>
    {% block stylesheets %}
        <!-- Appel des bibliothèques jQuery -->
        <script type="text/javascript" src="http://code.jquery.com/jquery-latest.min.js"
                xmlns="http://www.w3.org/1999/html"></script>
        <script type="text/javascript"
                src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.14/jquery-ui.min.js"></script>
        <script src="https://code.jquery.com/jquery-2.2.3.min.js"
                integrity="sha256-a23g1Nt4dtEYOj7bR+vTu7+T8VP13humZFBJNIYoEJo=" crossorigin="anonymous"></script>
        <script src="{{ asset('bundles/ortho/plugins/bootstrap-datepicker.js') }}"></script>

        <link rel="stylesheet"
              href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.14/themes/ui-lightness/jquery-ui.css"
              type="text/css" media="all"/>
        <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">

        <!-- Appel des bibliothèques Bootstrap -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/ortho/css/bootstrap.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/ortho/css/bootstrap.min.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/ortho/css/bootstrap-theme.css') }}"/>

        <!-- Appel de nos feuilles de style CSS -->
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/ortho/css/stylesheet.css') }}"/>

        <!-- Appel du plugin CodePlayer -->
        <script src="http://thecodeplayer.com/uploads/js/jquery.easing.min.js" type="text/javascript"></script>

    {% endblock %}
</head>

<body>
{% block nav %}
    <div class="navbar_homepage">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <ul class="nav navbar-nav">
                    {% if app.user %}
                        <!-- user is logged in -->
                        <li {% if app.request.get('_route') == 'fos_user_security_logout' %}
                            class="active"{% endif %}>
                            <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
                        </li>

                        {#{% if is_granted('ROLE_SUPER_ADMIN') %}#}
                        <!-- user is logged in ROLE_ADMIN -->

                        {#{% elseif is_granted('ROLE_TEAMNEO') %}#}
                        <!-- user is logged in ROLE_TEAMNEO -->

                        {#{% elseif is_granted('ROLE_LABORATOIRE') %}#}
                        <!-- user is logged in ROLE_USER, ROLE_LABO -->

                        {#{% elseif is_granted('ROLE_CABINET') %}#}
                        <!-- user is logged in ROLE_USER -->

                        <li {% if app.request.get('_route') == 'ortho_formulaire' %}
                            class="active"{% endif %}>
                            <a href="{{ path('ortho_formulaire') }}">Formulaire</a>
                        </li>

                        <li {% if app.request.get('_route') == 'fos_user_profile_show' or
                        app.request.get('_route') == 'fos_user_profile_edit' or
                        app.request.get('_route') == 'recup_commandes' or
                        app.request.get('_route') == 'recup_user' %}
                            class="active" {% endif %}>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Consulter
                                <span class="caret"></span></a>
                            <ul class="dropdown-menu tameremichel">
                                <li {% if app.request.get('_route') == 'fos_user_profile_show' or app.request.get('_route') == 'fos_user_profile_edit' %}
                                    class="active"{% endif %}>
                                    <a href="{{ path('fos_user_profile_show') }}">Mon profile</a>
                                </li>
                                <li {% if app.request.get('_route') == 'recup_commandes' %}
                                    class="active"{% endif %}>
                                    <a href="{{ path('recup_commandes') }}">Commandes</a>
                                </li>
                                <li {% if app.request.get('_route') == 'recup_user' %}
                                    class="active"{% endif %}>
                                    <a href="{{ path('recup_user') }}">Utilisateurs</a>
                                </li>
                            </ul>
                        </li>

                        <li {% if app.request.get('_route') == 'crea_cabinet' or
                        app.request.get('_route') == 'fiche_cabinet' or
                        app.request.get('_route') == 'crea_labo' or
                        app.request.get('_route') == 'fiche_labo' or
                        app.request.get('_route') == 'crea_app' or
                        app.request.get('_route') == 'crea_adj' %}
                            class="active" {% endif %}>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Ajouter
                                <span class="caret"></span></a>
                            <ul class="dropdown-menu tameremichel">
                                <li {% if app.request.get('_route') == 'crea_cabinet' or
                                app.request.get('_route') == 'fiche_cabinet' %}
                                    class="active" {% endif %}><a href="{{ path('crea_cabinet') }}">Ajouter un
                                        cabinet</a></li>
                                <li {% if app.request.get('_route') == 'crea_labo' or
                                app.request.get('_route') == 'fiche_labo' %}
                                    class="active" {% endif %}><a href="{{ path('crea_labo') }}">Ajouter un
                                        laboratoire</a></li>
                                <li {% if app.request.get('_route') == 'crea_app' %}
                                    class="active" {% endif %}><a href="{{ path('crea_app') }}">Ajouter un
                                        appareillage</a></li>
                                <li {% if app.request.get('_route') == 'crea_adj' %}
                                    class="active" {% endif %}><a href="{{ path('crea_adj') }}">Ajouter une
                                        adjonction</a></li>
                            </ul>
                        </li>

                    {% else %}
                        <!-- user is NOT logged in -->
                        <li {% if app.request.get('_route') == 'fos_user_security_login' %}
                            class="active"{% endif %}>
                            <a href="{{ path('fos_user_security_login') }}">Connexion</a>
                        </li>

                    {% endif %}

                    <li>
                        <a href="http://www.labo-orthodontics.fr" target="_blank">Site du laboratoire</a>
                    </li>

                </ul>

            </div>
        </nav>
    </div>
{% endblock %}

{% block body %}{% endblock %}

<script src="{{ asset('bundles/ortho/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('bundles/ortho/js/formulaire.js') }}"></script>
<!-- Appel de jQuery -->
<script src="http://thecodeplayer.com/uploads/js/jquery-1.9.1.min.js" type="text/javascript"></script>
<!-- Appel du plugin CodePlayer -->
<script src="http://thecodeplayer.com/uploads/js/jquery.easing.min.js" type="text/javascript"></script>
<!-- Appel de notre fichier JavaScript -->
<script src="js/formulairejQuery.js"></script>

{% block javascript %}{% endblock %}

</body>
</html>
