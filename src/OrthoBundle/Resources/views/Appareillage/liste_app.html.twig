{% extends 'base.html.twig' %}

{% block body %}
    <div id="msform">
        {% if app.user %} <!-- L'utilisateur est connecté -->
            <fieldset class="smallbloc">
                <h2 class="fs-title">Liste des appareillages</h2>

                {% for appareillage in appareillages %}

                    <a id="liste"
                       href="{{ path('fiche_app', { 'id': appareillage.id }) }}">{{ appareillage.id }}  {{ appareillage.nom }}</a>
                    <br/>
                    <a id="lienedit" href="{{ path('fiche_app', { 'id': appareillage.id }) }}">Voir</a> &nbsp;
                    <a id="lienedit" href="{{ path('edit_app', { 'id': appareillage.id }) }}">Editer</a>
                    <br/>

                {% endfor %}
            </fieldset>

        {% else %} <!-- L'utilisateur n'est pas connecté -->
            <fieldset class="smallbloc">
                Connectez-vous pour accéder à cette page.
            </fieldset>

        {% endif %}
    </div>
{% endblock %}
