{% extends 'base.html.twig' %}

    {% block li %}
        {#
        si besoin d'un onglet particulier dans nav
        <li><a href="" target="_blank"></a></li>
        #}
    {% endblock %}

{% block body %}
<div class="header_recap" xmlns="http://www.w3.org/1999/html">
    <form id="msform">
        <fieldset>
            <img class="coche_vert" src="{{ asset('bundles/ortho/img/coche_vert.png') }}"/>
            <h4>Votre nouvel apparareillage à bien été créé!</h4>

            <div class="affichage_recapitulatif_formulaire">
                <!-- A AJOUTER : Nom du de l'appareillage, etc... En lien avec la BDD -->
                <strong>Nom de l'appareillage : </strong>{{ recapAppareillage.nom }} </br>
                <strong>Famille de l'appareillage : </strong>{{ recapAppareillage.famille }} </br>
                <strong>Image : </strong>{{ recapAppareillage.image }} </br>
                <strong>Commentaires : </strong> {{ recapAppareillage.commentaire }}
            </div>
            <a id="buttonprofile" class="action-button" href="{{ path('crea_app') }}">Créer un
                nouvel appareillage</a>
{% if recapAppareillage.titreApp is defined %}
    {{ recapAppareillage.titreApp }}
{% endif %}
        </fieldset>
    </form>

    <!-- Appel de jQuery -->
    <script src="http://thecodeplayer.com/uploads/js/jquery-1.9.1.min.js" type="text/javascript"></script>
    <!-- Appel du plugin CodePlayer -->
    <script src="http://thecodeplayer.com/uploads/js/jquery.easing.min.js" type="text/javascript"></script>
    <!-- Appel de notre fichier JavaScript -->
    <script src="js/formulairejQuery.js"></script>

    {% endblock %}

