{% extends 'base.html.twig' %}

{% block body %}

    <div id="msform">
        {% if app.user %}
            <!-- user is logged in -->

            <fieldset class="largebloc">
                <img class="coche_vert" src="{{ asset('bundles/ortho/img/coche_vert.png') }}"/>
                <h2 class="fs-title">Ce cabinet a bien été ajouté.</h2>
                <h3 class="fs-subtitle"><span>Cabinet : <br></span>{{ affichagefiche ? affichagefiche.nom }}</h3>

                <div id="container">
                    <div class="profileplace">
                        <span>Identifiant : </span>{{ affichagefiche ? affichagefiche.username }}
                        <span>Nom complet : <br></span>{{ affichagefiche ? affichagefiche.nom }}
                        <span>E-mail : </span>{{ affichagefiche ? affichagefiche.email }}

                    </div>
                    <div class="profileplace">
                        <span>Adresse : <br></span>{{ affichagefiche ? affichagefiche.adresse }}
                        {{ affichagefiche ? affichagefiche.codePostal }}
                            &nbsp;{{ affichagefiche ? affichagefiche.ville }}
                        <span>Téléphone : </span>{{ affichagefiche ? affichagefiche.telephone }}
                    </div>
                    <div class="profileplace">
                        <h5>Lieu de facturation :</h5>
                        <span>Adresse : {{ affichagefiche ? affichagefiche.adresseFacturation }}</span>
                        <span>Code Postal : {{ affichagefiche ? affichagefiche.codePostalFacturation }}</span>
                        <span>Ville : {{ affichagefiche ? affichagefiche.villeFacturation }}</span>
                        <span>Téléphone : {{ affichagefiche ? affichagefiche.telephoneFacturation }}</span>
                    </div>
                    <div class="profileplace">
                        <span>Mail 2 : {{ affichagefiche ? affichagefiche.mailBis }}</span>
                        <span>Mail 3 : {{ affichagefiche ? affichagefiche.mailTer }}</span>
                    </div>
                </div>
                <div class="envoi_email_recapitulatif">
                    <a id="lien_nouveau_formulaire" class="action-button" href="{{ path('crea_cabinet') }}">Nouveau
                        cabinet</a>
                </div>


            </fieldset>
        {% else %}
            <!-- user is not logged in -->
            <fieldset class="smallbloc">
                Connectez-vous pour accéder à cette page.
            </fieldset>

        {% endif %}
    </div>

{% endblock %}

