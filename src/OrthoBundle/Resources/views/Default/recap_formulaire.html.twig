{# @OrthoBundle/Resources/views/Default/recap_formulaire.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}
    <div id="msform">
        <fieldset>

            <img class="coche_vert" src="{{ asset('bundles/ortho/img/coche_vert.png') }}"/>
            <h2>Votre formulaire a bien été envoyé ! Merci !</h2>
            <div class="affichage_recapitulatif_formulaire">
                <!-- A AJOUTER : Nom du cabinet, etc... En lien avec la BDD -->
                <strong>Nom du patient :</strong> {{ affichagerecap ? affichagerecap.referencePatient }} <br/>
                <strong>Prénom du patient :</strong> {{ affichagerecap ? affichagerecap.prenomPatient }} <br/>
                <strong>Date de retour souhaité
                    :</strong> {{ affichagerecap ? affichagerecap.dateretour|date('d-m-Y') }} <br/>
                <strong>Impression 3D : </strong> {{ affichagerecap.commentairePrestataire3D }}
                <br/>
                <strong>Travail à réaliser :</strong> {{ affichagerecap ? affichagerecap.commentaireLabo }} <br/>
                <strong>Code couleur :</strong> {{ affichagerecap ? affichagerecap.couleur }} <br/>
                <strong>Motifs :</strong> {{ affichagerecap ? affichagerecap.motif }} <br/>
                <strong>Date de commande :</strong> {{ affichagerecap ? affichagerecap.datecommande|date('d-m-Y à H:i') }} <br/>
                <strong>Commande envoyée à :</strong> <!-- A AJOUTER : Le nom du labo destinataire --> <br/>
                <strong>Info commerciale Cabinet :</strong> <!-- A AJOUTER : Les infos commerciales -->
            </div>
            <div class="impression_recapitulatif"> <!-- Impression de la commande -->
                <span onclick="print()">
                    <img id="imprimante" src="{{ asset('bundles/ortho/img/imprimante.png') }}"/> Imprimer
                </span>
            </div>
            <div class="envoi_email_recapitulatif"> <!-- Envoi de mail -->
                <!-- A AJOUTER : Le service SwiftMailer -->
                <img id="image_envoi_email" src=" {{ asset('bundles/ortho/img/envoi_par_email.png') }}"/> Recevoir par email
                <br/>
                <a id="lien_nouveau_formulaire" class="action-button" href="{{ path('ortho_formulaire') }}">
                    Nouveau formulaire
                </a>
            </div>
        </fieldset>
    </div>
{% endblock %}
