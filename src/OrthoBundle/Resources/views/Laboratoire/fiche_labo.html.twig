{% extends 'base.html.twig' %}

{% block body %}
    <div id="msform">
        {% if app.user %} <!-- L'utilisateur est connecté -->
            <fieldset class="largebloc">
                <img class="coche_vert" src="{{ asset('bundles/ortho/img/coche_vert.png') }}"/>
                <h2 class="fs-title">Ce laboratoire a bien été ajouté.</h2>
                <h3 class="fs-subtitle"><span>Laboratoire : </span>{{ affichagefiche ? affichagefiche.nom }}</h3>
                <div id="container">
                    <div class="profileplace">
                        <span>Identifiant : {{ affichagefiche ? affichagefiche.username }}</span> <br />
                        <span>Nom complet : <br>{{ affichagefiche ? affichagefiche.nom }}</span> <br />
                        <span>E-mail : {{ affichagefiche ? affichagefiche.email }}</span>
                    </div>
                    <div class="profileplace">
                        <span>Adresse : <br>{{ affichagefiche ? affichagefiche.adresse }}
                        {{ affichagefiche ? affichagefiche.codepostal }}
                            &nbsp;{{ affichagefiche ? affichagefiche.ville }}</span><br />
                        <span>Téléphone : {{ affichagefiche ? affichagefiche.telephone }}</span><br />
                        <span>E-mail Labo : {{ affichagefiche ? affichagefiche.email }}</span>
                    </div>
                    <div class="profileplace">
                        <h4>Facturation :</h4>
                        <span>Adresse : {{ affichagefiche ? affichagefiche.adresseFacturation }}</span><br />
                        <span>Code Postal : {{ affichagefiche ? affichagefiche.codePostalFacturation }}</span><br />
                        <span>Ville : {{ affichagefiche ? affichagefiche.villeFacturation }}</span><br />
                        <span>Téléphone : {{ affichagefiche ? affichagefiche.telephoneFacturation }}</span>
                    </div>
                    <div class="profileplace">
                        <span>Mail 2 : {{ affichagefiche ? affichagefiche.mailBis }}</span><br />
                        <span>Mail 3 : {{ affichagefiche ? affichagefiche.mailTer }}</span>
                    </div>
                </div>
                <div class="envoi_email_recapitulatif">
                    <a id="lien_nouveau_formulaire" class="action-button" href="{{ path('crea_labo') }}">Nouveau laboratoire</a>
                </div>
            </fieldset>
        {% else %} <!-- L'utilisateur n'est pas connecté -->
            <fieldset class="smallbloc">
                Connectez-vous pour accéder à cette page.
            </fieldset>
        {% endif %}
    </div>
{% endblock %}
