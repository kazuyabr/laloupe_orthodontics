{% extends 'base.html.twig' %}

{% block body %}

    <div id="msform">
        {% if app.user %}
            <!-- user is logged in -->

            <fieldset class="largebloc">
                <img class="coche_vert" src="{{ asset('bundles/ortho/img/coche_vert.png') }}"/>
                <h2 class="fs-title">Ce cabinet a bien été ajouté.</h2>
                <h3 class="fs-subtitle"><span>Cabinet : </span>{{ cabinets ? cabinets.nom }}</h3>

                <div id="container">
                    <div class="profileplace">
                        <span>Identifiant : </span>{{ cabinets ? cabinets.username }}<br>
                        <span>Nom complet : </span>{{ cabinets ? cabinets.nom }}<br>
                        <span>E-mail : </span>{{ cabinets ? cabinets.email }}

                    </div>
                    <div class="profileplace">
                        <span>Adresse : </span>{{ cabinets ? cabinets.adresse }}<br>
                        <span>Code Postal: </span>{{ cabinets ? cabinets.codePostal }}<br>
                        <span>Ville : </span>{{ cabinets ? cabinets.ville }}
                        <span>Téléphone : </span>{{ cabinets ? cabinets.telephone }}
                    </div>
                    <div class="profileplace">
                        <h5>Adresse de facturation :</h5>
                        <span>Adresse : {{ cabinets ? cabinets.adresseFacturation }}</span><br>
                        <span>Code Postal : {{ cabinets ? cabinets.codePostalFacturation }}</span><br>
                        <span>Ville : {{ cabinets ? cabinets.villeFacturation }}</span><br>
                        <span>Téléphone : {{ cabinets ? cabinets.telephoneFacturation }}</span>
                    </div>
                    <div class="profileplace">
                        <span>Mail 2 : {{ cabinets ? cabinets.mailBis }}</span><br>
                        <span>Mail 3 : {{ cabinets ? cabinets.mailTer }}</span>
                    </div>
                </div>
                <ul>
                    <li>
                        <a href="{{ path('liste_cabinet') }}">Retour à la liste</a>
                    </li>
                    <li>
                        <a href="{{ path('edit_cabinet', { 'id': cabinets.id }) }}">Modifier</a>
                    </li>
                    <li>
                        {{ form_start(delete_form) }}
                        <input type="submit" value="Supprimer">
                        {{ form_end(delete_form) }}
                    </li>
                </ul>
                <div class="envoi_email_recapitulatif">
                    <a id="lien_nouveau_formulaire" class="action-button" href="{{ path('crea_cabinet') }}">Nouveau
                        cabinet</a>
                </div>


            </fieldset>
        {% else %}
            <!-- user is not logged in -->
            <fieldset class="smallbloc">
                Connectez-vous pour accéder à cette page.
            </fieldset>

        {% endif %}
    </div>

{% endblock %}

