{% extends 'base.html.twig' %}

{% block body %}

    <div id="msform">
        {% if app.user %}
            <!-- user is logged in -->

            <fieldset class="largebloc">
                <img class="coche_vert" src="{{ asset('bundles/ortho/img/coche_vert.png') }}"/>
                <h2 class="fs-title">Ce cabinet a bien été ajouté.</h2>
                <h3 class="fs-subtitle"><span>Cabinet : </span>{{ users ? users.nom }}</h3>

                <div id="container">
                    <div class="profileplace">
                        <span>Identifiant : </span>{{ users ? users.username }}<br>
                        <span>Nom complet : </span>{{ users ? users.nom }}<br>
                        <span>E-mail : </span>{{ users ? users.email }}

                    </div>
                    <div class="profileplace">
                        <span>Adresse : </span>{{ users ? users.adresse }}<br>
                        <span>Code Postal: </span>{{ users ? users.codePostal }}<br>
                        <span>Ville : </span>{{ users ? users.ville }}
                        <span>Téléphone : </span>{{ users ? users.telephone }}
                    </div>
                    <div class="profileplace">
                        <h5>Adresse de facturation :</h5>
                        <span>Adresse : {{ users ? users.adresseFacturation }}</span><br>
                        <span>Code Postal : {{ users ? users.codePostalFacturation }}</span><br>
                        <span>Ville : {{ users ? users.villeFacturation }}</span><br>
                        <span>Téléphone : {{ users ? users.telephoneFacturation }}</span>
                    </div>
                    <div class="profileplace">
                        <span>Mail 2 : {{ users ? users.mailBis }}</span><br>
                        <span>Mail 3 : {{ users ? users.mailTer }}</span>
                    </div>
                </div>

                <div class="envoi_email_recapitulatif">
                    {{ form_start(delete_form) }}
                    <input id="lien_nouveau_formulaire" class="action-button" type="submit" value="Supprimer">
                    {{ form_end(delete_form) }}
                    <a id="lien_nouveau_formulaire" class="action-button" href="{{ path('liste_user') }}">Retour à la liste</a>
                    <a id="lien_nouveau_formulaire" class="action-button" href="{{ path('edit_user', { 'id': users.id }) }}">Modifier</a>
                    <a id="lien_nouveau_formulaire" class="action-button" href="{{ path('crea_user') }}">Nouveau
                        cabinet</a>
                </div>


            </fieldset>
        {% else %}
            <!-- user is not logged in -->
            <fieldset class="smallbloc">
                Connectez-vous pour accéder à cette page.
            </fieldset>

        {% endif %}
    </div>

{% endblock %}

